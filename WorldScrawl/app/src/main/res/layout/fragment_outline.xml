<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:screenReaderFocusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="?attr/actionBarTheme">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/edit_Title"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/enter_name"/>

                <ImageButton
                    android:id="@+id/printButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/saveButton"
                    android:scaleType="fitXY"
                    android:backgroundTint="?attr/colorPrimary"
                    app:srcCompat="@drawable/ic_baseline_print_24"/>

                <ImageButton
                    android:id="@+id/saveButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="180dp"
                    android:scaleType="fitXY"
                    android:backgroundTint="?attr/colorPrimary"
                    app:srcCompat="@drawable/ic_baseline_save_24"
                    android:contentDescription="@string/add_a_detail" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>



        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary">

                <ImageButton
                    android:id="@+id/undoButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_undo_24"
                    android:tint="@color/white" />

                <ImageButton
                    android:id="@+id/redoButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_redo_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/italicsButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_italic_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/boldButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_bold_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/underlineButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_underlined_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/strikeThroughButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_strikethrough_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/bulletButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_list_bulleted_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/numberedListButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_list_numbered_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/indentButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_indent_increase_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/leftalignButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_align_left_24"
                    android:tint="@color/white"/>
                <ImageButton
                    android:id="@+id/centeralignButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_format_align_center_24"
                    android:tint="@color/white"/>
                <ImageButton
                    android:id="@+id/rightalignButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_baseline_format_align_right_24"
                    android:tint="@color/white"/>
                <ImageButton
                    android:id="@+id/header1Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/h1"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/header2Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/h2"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/header3Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/h3"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/header4Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/h4"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/header5Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/h5"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/header6Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/h6"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/superscriptButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_superscript_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/subscriptButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_subscript_24"
                    android:tint="@color/white"/>

                <ImageButton
                    android:id="@+id/checkboxButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_check_box_24"
                    android:tint="@color/white"/>


            </LinearLayout>

        </HorizontalScrollView>

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</RelativeLayout>
